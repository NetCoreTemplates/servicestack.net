@page "/auto-ui"
@attribute [RenderStatic]

@{
    ViewData["Title"] = "Built In UIs";
    ViewData["Brand"] = "ServiceStack UIs";
}

@await Html.PartialAsync("VideoIncludes")

<section class="relative isolate overflow-hidden bg-slate-900">
  <svg class="absolute inset-0 -z-10 h-full w-full stroke-white/10 [mask-image:radial-gradient(100%_100%_at_top_right,white,transparent)]" aria-hidden="true">
    <defs>
      <pattern id="983e3e4c-de6d-4c3f-8d64-b9761d1534cc" width="200" height="200" x="50%" y="-1" patternUnits="userSpaceOnUse">
        <path d="M.5 200V.5H200" fill="none" />
      </pattern>
    </defs>
    <svg x="50%" y="-1" class="overflow-visible fill-gray-800/20">
      <path d="M-200 0h201v201h-201Z M600 0h201v201h-201Z M-400 600h201v201h-201Z M200 800h201v201h-201Z" stroke-width="0" />
    </svg>
    <rect width="100%" height="100%" stroke-width="0" fill="url(#983e3e4c-de6d-4c3f-8d64-b9761d1534cc)" />
  </svg>
  <svg viewBox="0 0 1108 632" aria-hidden="true" class="absolute top-10 left-[calc(50%-4rem)] -z-10 w-[69.25rem] max-w-none transform-gpu blur-3xl sm:left-[calc(50%-18rem)] lg:left-48 lg:top-[calc(50%-30rem)] xl:left-[calc(50%-24rem)]">
    <path fill="url(#175c433f-44f6-4d59-93f0-c5c51ad5566d)" fill-opacity=".2" d="M235.233 402.609 57.541 321.573.83 631.05l234.404-228.441 320.018 145.945c-65.036-115.261-134.286-322.756 109.01-230.655C968.382 433.026 1031 651.247 1092.23 459.36c48.98-153.51-34.51-321.107-82.37-385.717L810.952 324.222 648.261.088 235.233 402.609Z" />
    <defs>
      <linearGradient id="175c433f-44f6-4d59-93f0-c5c51ad5566d" x1="1220.59" x2="-85.053" y1="432.766" y2="638.714" gradientUnits="userSpaceOnUse">
        <stop stop-color="#4F46E5" />
        <stop offset="1" stop-color="#80CAFF" />
      </linearGradient>
    </defs>
  </svg>
  <div class="mx-auto max-w-7xl px-6 pt-16 pb-16 lg:flex lg:px-8">
    <div class="mx-auto max-w-2xl flex-shrink-0 lg:mx-0 lg:max-w-xl lg:pt-8">
        <h1 class="mt-4 text-4xl tracking-tight font-extrabold text-white sm:mt-5 sm:text-6xl lg:mt-6 xl:text-6xl">
            <span class="block">Built-in Auto UIs</span>
        </h1>
        <p class="mt-3 text-base text-gray-300 sm:mt-5 sm:text-xl lg:text-lg xl:text-xl">
            Explore, discover, query, integrate and call APIs instantly with ServiceStack's built-in Auto UIs
            dynamically generated from the rich metadata of your typed APIs declarative C# DTOs
        </p>
        <div class="mt-10 align-top">
            <lite-youtube class="max-w-xl aspect-video" videoid="Qqj6W-4sSXQ"
                          style="background-image: url('https://img.youtube.com/vi/Qqj6W-4sSXQ/maxresdefault.jpg')"></lite-youtube>
        </div>
        <div class="mt-10 flex items-center gap-x-6">
            <a href="https://docs.servicestack.net/auto-html-api" class="rounded-md bg-indigo-500 px-3.5 py-2.5 text-lg text-white shadow-sm hover:bg-indigo-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-400">Learn more</a>
        </div>
    </div>
    <div class="mx-auto mt-16 flex max-w-2xl sm:mt-24 lg:ml-10 lg:mt-0 lg:mr-0 lg:max-w-none lg:flex-none xl:ml-32">
        <div class="max-w-3xl flex-none sm:max-w-5xl lg:max-w-none">
            <a href="https://docs.servicestack.net/locode/">
            <img src="/img/pages/auto-ui/gallery-contacts.png" alt="App screenshot" width="2432" height="1442" class="w-[68rem] rounded-md bg-white/5 shadow-2xl ring-1 ring-white/10"></a>
        </div>
    </div>
  </div>
</section>

@await Html.PartialAsync("PrimaryNav", "auto-ui")

<link rel="stylesheet" href="css/typography.css">

<a id="autohtml"></a>
@await Html.PartialAsync("VideoGroup", new Shared.VideoGroup {
  Title = "Auto HTML API",
  Summary = "The best way to visualize, inspect and integrate with your APIs in an instant",
  Group = "ui-autohtml",
  LearnMore = "https://docs.servicestack.net/templates-overview",
})

<a id="apiexplorer"></a>
@await Html.PartialAsync("VideoGroup", new Shared.VideoGroup {
  Title = "API Explorer",
  Summary = "A Postman & Swagger UI alternative built into ServiceStack that lets you explore, discover & call your APIs",
  Group = "ui-explorer",
  LearnMore = "https://docs.servicestack.net/auto-html-api",
  Background = "bg-slate-100 dark:bg-slate-800",
})

<a id="locode"></a>
@await Html.PartialAsync("VideoGroup", new Shared.VideoGroup {
  Title = "Locode",
  Summary = "Rapidly develop beautiful database-powered Web Apps with an Instant UI around existing database-first RDBMS tables for rapid prototyping, then export into declarative code-first development models for even greater customizability",
  Group = "ui-locode",
  LearnMore = "https://docs.servicestack.net/locode/",
})

<section class="py-24 bg-slate-600 w-full overflow-hidden">
    <div class="w-full mb-12">
        <div>
            <h2 class="text-center text-white text-3xl font-semibold leading-normal text-white">Admin UIs</h2>
            <p class="text-center text-2xl font-light leading-relaxed my-4 text-slate-400">
                Admin Dashboard, Manage Users, Profiling &amp; Logging, Database Admin, Redis Admin, DB Validation Rules
            </p>
        </div>
    </div>
    <div class="-my-4 flex justify-center gap-5 overflow-hidden py-4 sm:gap-8">
        <div class="relative aspect-[9/10] w-44 flex-none overflow-hidden rounded-xl bg-zinc-100 dark:bg-zinc-800 sm:w-72 sm:rounded-2xl rotate-2">
            <a title="Admin Dashboard" href="https://docs.servicestack.net/admin-ui">
            <img alt="" sizes="(min-width: 640px) 18rem, 11rem" src="/img/pages/auto-ui/admin-dashboard.png" width="3744" height="5616" decoding="async" data-nimg="1" class="absolute inset-0 h-full w-full object-cover" loading="lazy" style="color: transparent;"></a>
        </div>
        <div class="relative aspect-[9/10] w-44 flex-none overflow-hidden rounded-xl bg-zinc-100 dark:bg-zinc-800 sm:w-72 sm:rounded-2xl -rotate-2">
            <a title="Manage Users Admin UI" href="https://docs.servicestack.net/admin-ui-users">
            <img alt="" sizes="(min-width: 640px) 18rem, 11rem" src="/img/pages/auto-ui/admin-users.png" width="1074" height="1260" decoding="async" data-nimg="1" class="absolute inset-0 h-full w-full object-cover" loading="lazy" style="color: transparent;"></a>
        </div>
        <div class="relative aspect-[9/10] w-44 flex-none overflow-hidden rounded-xl bg-zinc-100 dark:bg-zinc-800 sm:w-72 sm:rounded-2xl rotate-2">
            <a title="Request Logging &amp; Profiling UI" href="https://docs.servicestack.net/admin-ui-profiling">
            <img alt="" sizes="(min-width: 640px) 18rem, 11rem" src="/img/pages/auto-ui/admin-logging.png" width="5760" height="3840" decoding="async" data-nimg="1" class="absolute inset-0 h-full w-full object-cover" loading="lazy" style="color: transparent;"></a>
        </div>
        <div class="relative aspect-[9/10] w-44 flex-none overflow-hidden rounded-xl bg-zinc-100 dark:bg-zinc-800 sm:w-72 sm:rounded-2xl rotate-2">
            <a title="Database Admin UI" href="https://docs.servicestack.net/admin-ui-database">
            <img alt="" sizes="(min-width: 640px) 18rem, 11rem" src="/img/pages/auto-ui/admin-database.png" width="2400" height="3000" decoding="async" data-nimg="1" class="absolute inset-0 h-full w-full object-cover" loading="lazy" style="color: transparent;"></a>
        </div>
        <div class="relative aspect-[9/10] w-44 flex-none overflow-hidden rounded-xl bg-zinc-100 dark:bg-zinc-800 sm:w-72 sm:rounded-2xl -rotate-2">
            <a title="DB Validation Rules UI" href="https://docs.servicestack.net/admin-ui-validation">
            <img alt="" sizes="(min-width: 640px) 18rem, 11rem" src="/img/pages/auto-ui/admin-validation.png" width="4240" height="2384" decoding="async" data-nimg="1" class="absolute inset-0 h-full w-full object-cover" loading="lazy" style="color: transparent;"></a>
        </div>
    </div>
</section>

<a id="admin"></a>
@await Html.PartialAsync("VideoGroup", new Shared.VideoGroup {
   Title = "Admin UI",
   Summary = "A suite of Admin UIs with a number of productivity features ranging from Managing Users & DB Validation Rules to gaining unprecedented insights into running Apps with in-depth Request Logging & Profiling to observe App's in real-time",
   Group = "ui-admin",
   LearnMore = "https://docs.servicestack.net/admin-ui",
})

@await Html.PartialAsync("PricingLinks")

@await Html.PartialAsync("Testimonials")

@await Html.PartialAsync("BrandCustomers")
