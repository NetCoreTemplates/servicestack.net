@page
@model MyApp.Pages.Shared.DocsHeader

<link rel="stylesheet" href="css/typography.css">
<link rel="stylesheet" href="css/lite-yt-embed.css">
<link rel="stylesheet" href="css/highlight.css">

<div class="relative py-8 overflow-hidden sm:py-12 lg:py-16">
    <div class="mx-auto max-w-md px-4 text-center sm:px-6 sm:max-w-3xl lg:px-8 lg:max-w-7xl">
        <div class="mt-8">
            <h3 class="text-4xl tracking-tight font-extrabold text-gray-900 dark:text-gray-50 sm:text-5xl md:text-6xl">
                @Html.Raw(Model.Heading)
            </h3>
            <div class="my-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
                @Html.Raw(Model.SubHeading)
            </div>
        </div>
    </div>
</div>
